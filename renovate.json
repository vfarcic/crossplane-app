{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["devbox"],
      "commitMessageSuffix": "[skip ci]",
      "automerge": true,
      "platformAutomerge": false
    },
    {
      "matchManagers": ["github-actions"],
      "commitMessageSuffix": "[skip ci]",
      "automerge": true,
      "platformAutomerge": false
    }
  ]
}
